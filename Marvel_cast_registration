#Marvel_cast_registration
import boto3

s3=boto3.client('s3')
rekognition=boto3.client('rekognition',region_name='us-east-1')
dynamodbTableName='marvel'
dynamodb=boto3.resource('dynamodb',region_name='us-east-1')
marvelTable=dynamodb.Table(dynamodbTableName)

def lambda_handler(event,context):
    print(event)
    bucket=event['Records'][0]['s3']['bucket']['name']
    key=event['Records'][0]['s3']['object']['key']
    
    try:
        response=index_marvel_image(bucket,key)
        print(response)
        if response['ResponseMetadata']['HTTPStatusCode']==200:
            faceId=response['FaceRecords'][0]['Face']['FaceId']
            name=key.split('.')[0].split('_')
            firstName=name[0]
            lastName=name[1]
            register_marvel(faceId,firstName,lastName)
        return response
    except Exception as e:
        print(e)
        print('error processing employee img {} from bucket {}.'.format(key,bucket))
        raise e
    

    
def index_marvel_image(bucket, key):
    response = rekognition.index_faces(
        Image={
            'S3Object':
                {'Bucket': bucket,
                 'Name': key
                }
        },
        CollectionId="marvel"
    )
    return response

def register_marvel(faceId, firstName, lastName):
    marvelTable.put_item(
        Item={
            'rekognitionid': faceId,
            'firstName': firstName,
            'lastName': lastName
        })
    
    
    
    
        
